<div id="pageTitle">
    <h1>New News</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @news.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Title: </td>
    			  <td class="itemValue"><input type="text" name="news[title]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Author: </td>
    			  <td class="itemValue"><input type="text" name="news[author]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Media:thumbnail: </td>
    			  <td class="itemValue"><input type="text" name="news[media:thumbnail]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Published: </td>
    			  <td class="itemValue"><input type="text" name="news[published]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Id: </td>
    			  <td class="itemValue"><input type="text" name="news[id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Content: </td>
    			  <td class="itemValue"><input type="text" name="news[content]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Link: </td>
    			  <td class="itemValue"><input type="text" name="news[link]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Updated: </td>
    			  <td class="itemValue"><input type="text" name="news[updated]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>