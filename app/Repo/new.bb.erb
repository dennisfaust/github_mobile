<div id="pageTitle">
    <h1>New Repo</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @repo.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Description: </td>
    			  <td class="itemValue"><input type="text" name="repo[description]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Forks: </td>
    			  <td class="itemValue"><input type="text" name="repo[forks]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Name: </td>
    			  <td class="itemValue"><input type="text" name="repo[name]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Watchers: </td>
    			  <td class="itemValue"><input type="text" name="repo[watchers]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Private: </td>
    			  <td class="itemValue"><input type="text" name="repo[private]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Url: </td>
    			  <td class="itemValue"><input type="text" name="repo[url]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Fork: </td>
    			  <td class="itemValue"><input type="text" name="repo[fork]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Owner: </td>
    			  <td class="itemValue"><input type="text" name="repo[owner]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Homepage: </td>
    			  <td class="itemValue"><input type="text" name="repo[homepage]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>