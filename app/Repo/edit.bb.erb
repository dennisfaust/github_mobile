<div id="pageTitle">
		<h1>Edit <%= @repo.description%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @repo.object %>
    <%= link_to "Delete", :action => :delete, :id => @repo.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @repo.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="repo[description]" value="<%= @repo.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Forks: </td>
              			<td class="itemValue"><input type="text" name="repo[forks]" value="<%= @repo.forks %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="repo[name]" value="<%= @repo.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Watchers: </td>
              			<td class="itemValue"><input type="text" name="repo[watchers]" value="<%= @repo.watchers %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Private: </td>
              			<td class="itemValue"><input type="text" name="repo[private]" value="<%= @repo.private %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Url: </td>
              			<td class="itemValue"><input type="text" name="repo[url]" value="<%= @repo.url %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Fork: </td>
              			<td class="itemValue"><input type="text" name="repo[fork]" value="<%= @repo.fork %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Owner: </td>
              			<td class="itemValue"><input type="text" name="repo[owner]" value="<%= @repo.owner %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Homepage: </td>
              			<td class="itemValue"><input type="text" name="repo[homepage]" value="<%= @repo.homepage %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
