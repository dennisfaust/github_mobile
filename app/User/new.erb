<div class="pageTitle">
  <h1>New <%= @user.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @user.object %>"/>
    <ul>
      
          <li>
            <label for="user[id]" class="fieldLabel">Id</label>
            <input type="text" name="user[id]" <%=
            placeholder("Id") %> />
          </li>
      
          <li>
            <label for="user[user]" class="fieldLabel">User</label>
            <input type="text" name="user[user]" <%=
            placeholder("User") %> />
          </li>
      
          <li>
            <label for="user[login]" class="fieldLabel">Login</label>
            <input type="text" name="user[login]" <%=
            placeholder("Login") %> />
          </li>
      
          <li>
            <label for="user[email]" class="fieldLabel">Email</label>
            <input type="text" name="user[email]" <%=
            placeholder("Email") %> />
          </li>
      
          <li>
            <label for="user[location]" class="fieldLabel">Location</label>
            <input type="text" name="user[location]" <%=
            placeholder("Location") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create"/>
  </form>
</div>